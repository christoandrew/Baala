<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:background="@drawable/event_back"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_margin="4dp"
        android:src="@drawable/panamera"
        android:id="@+id/event_list_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="19-1-2014"
        android:layout_margin="5dp"
        android:id="@+id/event_list_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Event Name"
        android:id="@+id/event_list_name"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_below="@+id/event_list_date"
        android:layout_toRightOf="@+id/event_list_image"
        android:layout_toEndOf="@+id/event_list_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location :"
        android:layout_marginLeft="10dp"
        android:padding="3dp"
        android:layout_marginBottom="3dp"
        android:id="@+id/event_list_location_label"
        android:textSize="15sp"
        android:layout_below="@+id/event_list_name"
        android:layout_toRightOf="@+id/event_list_image"
        android:layout_toEndOf="@+id/event_list_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Panamera Bar and Lounge"
        android:layout_marginLeft="27dp"
        android:padding="5dp"
        android:textSize="12sp"
        android:id="@+id/event_list_location"
        android:layout_alignTop="@+id/event_list_location_label"
        android:layout_toRightOf="@+id/event_list_location_label"
        android:layout_toEndOf="@+id/event_list_location_label"
        android:layout_alignRight="@+id/event_list_date"
        android:layout_alignEnd="@+id/event_list_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dress Code :"
        android:textSize="15sp"
        android:padding="3dp"
        android:id="@+id/event_list_dress_code_label"
        android:layout_above="@+id/event_list_entrance_label"
        android:layout_alignLeft="@+id/event_list_entrance_label"
        android:layout_alignStart="@+id/event_list_entrance_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bikinis and Shorts and sandles"
        android:id="@+id/event_list_dress_code"
        android:textSize="12sp"
        android:padding="3dp"
        android:layout_below="@+id/event_list_location_label"
        android:layout_alignLeft="@+id/event_list_location"
        android:layout_alignStart="@+id/event_list_location" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Entrance :"
        android:textSize="15sp"
        android:padding="3dp"
        android:id="@+id/event_list_entrance_label"
        android:layout_toStartOf="@+id/event_list_location"
        android:layout_below="@+id/event_list_dress_code"
        android:layout_alignRight="@+id/event_list_location_label"
        android:layout_alignEnd="@+id/event_list_location_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="5000"
        android:id="@+id/event_list_entrance"
        android:textSize="12sp"
        android:padding="2dp"
        android:layout_alignBottom="@+id/event_list_entrance_label"
        android:layout_alignLeft="@+id/event_list_location"
        android:layout_alignStart="@+id/event_list_location" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_list_id"
        android:visibility="gone"
        android:layout_below="@+id/event_list_location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>

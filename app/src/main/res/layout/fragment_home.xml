<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:background="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/tab_pageIndicator_text"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.iconasystems.christo.baalafinal.HomeFragment">

        <TextView
            android:background="@drawable/event_back"
            android:id="@+id/current_location"
            android:layout_margin="5dp"
            android:tag="current_location"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="New Text"
            android:background="@android:color/black"
            android:layout_marginBottom="5dp"
            android:id="@+id/textView"
            android:layout_below="@+id/current_location"
            android:layout_centerHorizontal="true" />

        <ListView
            android:background="@color/tab_pageIndicator_text"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_view_event"
            android:padding="5dp"
            android:dividerHeight="4dp"
            android:divider="@color/tab_pageIndicator_text"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</ScrollView>

